<Window x:Class="FootballTicketOffice.Windows.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballTicketOffice.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Смена пароля" MaxHeight="280" MaxWidth="300" Width="200" Height="285" ResizeMode="NoResize" Icon="/FootballTicketOffice;component/Resources/blackball.ico">
    <StackPanel Orientation="Vertical">
        <Label Content="Введите старый пароль" FontSize="15"></Label>
        <PasswordBox Name="pswBoxOldPass" Width="190" Height="35"></PasswordBox>
        <Label Content="Введите новый пароль" FontSize="15"></Label>
        <PasswordBox Name="pswBoxNewPass" Width="190" Height="35"></PasswordBox>
        <Label Content="Подтвердите пароль" FontSize="15"></Label>
        <PasswordBox Name="pswBoxNewPassCommit" Width="190" Height="35"></PasswordBox>
        <Button Content="Сохранить" Height="35" FontSize="16" Name="btnSave" Click="btnSave_Click"></Button>
    </StackPanel>
</Window>
